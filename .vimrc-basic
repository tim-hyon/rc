set nocp
set cc=80

"INDENTING and TABBING
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab
set hlsearch

set t_Co=256
syntax enable
syntax on
filetype plugin indent on
set encoding=utf-8

set nu
set laststatus=2

set mouse=a
map <ScrollWheelUp> <C-Y>
map <ScrollWheelDown> <C-E>

set so=9999

nnoremap <C-k> <C-W>-
nnoremap <C-j> <C-W>+
nnoremap <C-l> <C-W>><C-W>>
nnoremap <C-h> <C-W><<C-W><

colorscheme peachpuff
